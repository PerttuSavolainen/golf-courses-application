<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/golffieldCardView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_margin="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_alignParentTop="false"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/golffieldImageView" />

            <TextView
                android:layout_toRightOf="@+id/golffieldImageView"
                android:layout_alignParentTop="true"
                android:id="@+id/golffieldNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="20sp" />

            <TextView
                android:layout_toRightOf="@+id/golffieldImageView"
                android:layout_below="@id/golffieldNameTextView"
                android:id="@+id/golffieldAddressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:layout_toRightOf="@+id/golffieldImageView"
                android:layout_below="@id/golffieldAddressTextView"
                android:id="@+id/golffieldPhoneTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:layout_toRightOf="@+id/golffieldImageView"
                android:layout_below="@id/golffieldPhoneTextView"
                android:id="@+id/golffieldEmailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:textSize="16sp" />

        </RelativeLayout>


   </android.support.v7.widget.CardView>

</LinearLayout>